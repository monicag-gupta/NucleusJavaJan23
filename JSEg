    <script>
        function hello(){
            alert("Hello World");
            document.getElementById("res1").innerHTML += sq(2);
            document.getElementById("res2").innerHTML += sq;
        }
        function sq(a){
            b=parseInt(a);
            return b*b;
        }


    </script>
</body>
