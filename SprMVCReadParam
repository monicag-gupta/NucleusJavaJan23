    <servlet-class> org.springframework.web.servlet.DispatcherServlet  </servlet-class>
    <load-on-startup>1</load-on-startup>	</servlet>
  <servlet-mapping>
    <servlet-name>serv2</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>










